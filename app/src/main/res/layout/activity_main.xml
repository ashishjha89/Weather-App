<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/weather_list_view"
        android:layout_width="@dimen/weather_item_size"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="left" />

    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/map_margin"
        android:layout_marginLeft="@dimen/map_margin"
        android:layout_marginRight="@dimen/map_margin"
        android:layout_marginTop="@dimen/map_margin"
        tools:context=".activities.MapActivity" />
</LinearLayout>